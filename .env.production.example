# ============================================
# VARIABLES DE ENTORNO PARA RENDER.COM
# ============================================

# ===== DATABASE =====
# Render te dará esta URL automáticamente al crear la base de datos
# Formato: postgresql://usuario:password@servidor:puerto/basedatos
DATABASE_URL="postgresql://delicias_user:SUPER_SECRET_PASSWORD@dpg-xxxxx.oregon-postgres.render.com/delicias_db"

# ===== SEGURIDAD =====
# IMPORTANTE: Genera un secreto fuerte y único para producción
# Puedes generarlo con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="TU_SECRETO_JWT_SUPER_SEGURO_AQUI_64_CARACTERES_MINIMO"
JWT_EXPIRES_IN="7d"

# ===== SERVER =====
# Render usa PORT automáticamente, NO cambiar
PORT=3000
NODE_ENV="production"

# ===== CORS =====
# URL de tu frontend en Vercel (la obtendrás después de deployar)
FRONTEND_URL="https://tu-app.vercel.app"

# Lista de orígenes permitidos separados por coma (opcional)
# CORS_ORIGINS="https://tu-app.vercel.app,https://otro-dominio.com"

# ===== FILE STORAGE (CLOUDINARY) =====
STORAGE_TYPE="cloudinary"

# Credenciales de Cloudinary (obtener desde cloudinary.com/console)
CLOUDINARY_CLOUD_NAME="tu-cloud-name"
CLOUDINARY_API_KEY="123456789012345"
CLOUDINARY_API_SECRET="tu-api-secret"

# ===== EMAIL (OPCIONAL) =====
# Si quieres enviar emails, configura esto:
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="tu-email@gmail.com"
SMTP_PASS="tu-app-password"
SMTP_FROM="noreply@deliciasjurasicas.com"

# ===== REDIS (OPCIONAL - NO NECESARIO PARA EMPEZAR) =====
# REDIS_URL="redis://default:password@redis-server:6379"

# ===== RATE LIMITING =====
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===== PAGINATION =====
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ===== LOGGING =====
LOG_LEVEL="info"

# ===== OTROS =====
# Deshabilitar telemetría de Prisma en producción
CHECKPOINT_DISABLE=true
